<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/liteorange"
        android:layout_marginBottom="5dp"
        android:layout_height="70dp"
        app:cardCornerRadius="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:civ_circle_background_color="@color/dark"
            android:background="@drawable/ic_boy">

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/babyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:text="id" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginTop="22dp"
            android:text="name" />
        <TextView
            android:id="@+id/birthday"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"
            android:textFontWeight="1"
            android:fontFamily="@font/poppins"
            android:text="Birthday"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="height"
                android:textColor="#ffffff"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="weight" />
            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:text="gender" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/edit_baby"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins"
                android:textColor="#ffffff"
                android:background="@color/liteblue"
                android:text="Edit">

            </Button>
            <Button
                android:id="@+id/delete_baby"
                android:layout_width="60dp"
                android:fontFamily="@font/poppins"
                android:layout_height="20dp"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:background="@color/chili"
                >

            </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>