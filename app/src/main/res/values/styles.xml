<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="succes">
        <item name="colorBackground">@color/green</item>
        <item name="textColor">@color/white</item>
        <item name="iconLeft">@drawable/ic_happy</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>

    </style>
    <style name="error">
        <item name="colorBackground">@color/litered</item>
        <item name="textColor">@color/white</item>
        <item name="iconLeft">@drawable/ic_sad</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="warning">
        <item name="colorBackground">@color/orange</item>
        <item name="textColor">@color/white</item>
        <item name="iconLeft">@drawable/ic_confused</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>
